doctype html
html(lang="en")
  head
    title BG2 ðŸ˜Ž COOL
    link(href="https://fonts.googleapis.com/css?family=Cormorant+Garamond|Nunito|Oswald:700|Vollkorn&display=swap" rel="stylesheet")
    link(href="css/bg2cool.css" rel="stylesheet")
    
  body
    #app

      include partials/_current.pug

      section.patterns
        .pattern-holder
          each pattern,index in allPatterns
            //article.pattern()
            figure.pattern(v-bind:class="{current: activeTitle == '"+pattern.title+"'}" style="background-image:url(patterns/"+pattern.folder+"/"+pattern.file+")" v-on:click="setPattern("+JSON.stringify(pattern)+")")
              .name-holder
                h2.name= pattern.title

      //-.current-pattern(v-if="currentPattern && currentPattern != {}")
        .inner
          span.label Current Pattern
          .name(v-text="currentPattern.title")
          span.author-holder(v-if="currentPattern.author")
            span by 
            a(:href="currentPattern.author.url")
              span.author(v-text="currentPattern.author.name")
          .tags(v-if="currentPattern.tags")
            label Tags:
            span.tag(v-for="tag in currentPattern.tags")
              a(href="#" v-text="tag")
          
          .download-holder
            a.download(href="#") Download This


    include partials/_javascripts